<h1>Liste des CCTP</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <td>#</td>
            <td>Infos</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        <% @cctps.each do |cctp| %>
        <tr>
            <td><%= cctp.id %></td>
            <td><%= cctp.cctpcharacteristics %></td>
            <td>
                <a href="<%= cctps_path(cctp.id) %>" class="fa fa-eye fa-2x"></a>
                <a href="<%= edit_cctp_path(cctp.id) %>" class="fa fa-pencil fa-2x"></a>
                <a href="<%= cctp_path(cctp.id) %>" class="fa fa-trash fa-2x" data-confirm="Etes sur sÃ»r ?" data-method="delete"></a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <a href="<%= new_cctp_path %>" class="btn btn-success fa fa-plus-circle"> Ajouter un nouveau CCTP</a>
</p>

