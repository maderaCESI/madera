<h1>Liste des bardages</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <td>#</td>
            <td>Infos</td>
            <td>Prix</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        <% @claddings.each do |cladding| %>
        <tr>
            <td><%= cladding.id %></td>
            <td><%= cladding.thicknessCladdings %></td>
            <td><%= cladding.priceCladdings %></td>
            <td>
                <a href="<%= claddings_path(cladding.id) %>" class="fa fa-eye fa-2x"></a>
                <a href="<%= edit_cladding_path(cladding.id) %>" class="fa fa-pencil fa-2x"></a>
                <a href="<%= cladding_path(cladding.id) %>" class="fa fa-trash fa-2x" data-confirm="Etes sur sÃ»r ?" data-method="delete"></a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <a href="<%= new_cladding_path %>" class="btn btn-success fa fa-plus-circle"> Ajouter un nouveau CCTP</a>
</p>

