<h1>Modifier fournisseur</h1>

<%= form_for @provider do |f| %>
<div class="form-group">
    <%= f.label :providerName, 'Nom du fournisseur :' %><br />
    <%= f.text_field :providerName, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :phonenumber, 'Téléphone :' %><br />
    <%= f.text_field :phonenumber, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :email, 'Email :' %><br />
    <%= f.text_field :email, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :streetNumber, 'Numéro de rue :' %><br />
    <%= f.text_field :streetNumber, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :streetName, 'Nom de la rue :' %><br />
    <%= f.text_field :streetName, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :pc, 'Code postal : ' %><br />
    <%= f.text_field :pc, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :cityName, 'Ville :'%><br />
    <%= f.text_field :cityName, class: 'form-control' %>
</div>

<div class="form-group">
    <button class="btn btn-primary", type="submit">Modifier le fournisseur</button>
</div>

<% end %>