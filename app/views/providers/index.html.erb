<h1>Liste des fournisseurs</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <td>ID</td>
            <td>Nom du fournisseur</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        <% @providers.each do |provider| %>
        <tr>
            <td><%= provider.id %></td>
            <td><%= provider.providerName %></td>
            <td>
                <a href="<%= providers_path(provider.id) %>" class="fa fa-eye fa-2x"></a>
                <a href="<%= edit_provider_path(provider.id) %>" class="fa fa-pencil fa-2x"></a>
                <a href="<%= provider_path(provider.id) %>" class="fa fa-trash fa-2x" data-confirm="Etes sur sÃ»r ?" data-method="delete"></a>
            
            </td>
            
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <a href="<%= new_provider_path %>" class="btn btn-success fa fa-plus-circle"> Ajouter un nouveau fournisseur</a>
</p>

