<!DOCTYPE html>
<titre><% provide(:title, 'Connexion') %></titre>

<div class="container">
  <div class="text-center"><%= image_tag("logo_simple.jpg", :alt => "logo simple madera", height:"280px") %></div>
  <h1 class="text-center">Connexion</h1>
  
  <div class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :login, 'Identifiant :', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :login, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Mot de passe :', class: 'col-sm-2 control-label'%>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Se connecter", class: "btn btn-lg btn-success btn-block " %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
  
</div>



