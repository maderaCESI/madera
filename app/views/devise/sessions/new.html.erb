<!DOCTYPE html>
<titre><% provide(:title, 'Connexion') %></titre>

<div class="container">
  <div class="text-center"><%= image_tag("logo_simple.jpg", :alt => "logo simple madera", height:"280px") %></div>
  <h1 class="text-center">Connexion</h1>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :login, 'Nom utilisateur ou email :' %><br />
        <%= f.text_field :login, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Mot de passe :'%><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Se connecter", class: "btn btn-lg btn-info btn-block btn-md" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    
  </div>
</div>



