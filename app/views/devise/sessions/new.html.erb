<!DOCTYPE html>
<titre><% provide(:title, 'Connexion') %></titre>

<div class="container">
  <div class="text-center"><%= image_tag("logo_simple.jpg", :alt => "logo simple madera", height:"400px") %></div>
  <h1 class="text-center">Log in</h1>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <input class="form-control" id="focusedInput" type="text" placeholder="Username">
    </div>
    <div class="col-md-3">
      <input class="form-control" id="focusedInput" type="text" placeholder="Password">
    </div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-primary">Connexion</button>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, input_html: { class: "form-control"} %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
