<h1>Liste des régles de calcul</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <td>#</td>
            <td>Ossature bois</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        <% @calculation_rules.each do |calculation_rule| %>
        <tr>
            <td><%= calculation_rule.id %></td>
            <td><%= calculation_rule.woodFrameConception %></td>
            <td>
                <a href="<%= calculation_rules_path(calculation_rule.id) %>" class="fa fa-eye fa-2x"></a>
                <a href="<%= edit_calculation_rule_path(calculation_rule.id) %>" class="fa fa-pencil fa-2x"></a>
                <a href="<%= calculation_rule_path(calculation_rule.id) %>" class="fa fa-trash fa-2x" data-confirm="Etes sur sûr ?" data-method="delete"></a>
            
            </td>
            
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <a href="<%= new_calculation_rule_path %>" class="btn btn-success fa fa-plus-circle"> Ajouter un nouveau client</a>
</p>

